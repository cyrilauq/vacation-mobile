<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleAddVacation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_horizontal_margin"
        android:fontFamily="@font/alata"
        android:text="@string/add_vacation"
        android:textColor="@color/orange"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextVacationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:hint="Vacation name"
        android:inputType="textEmailAddress"
        android:text="Vacation name"
        app:layout_constraintEnd_toEndOf="@+id/titleAddVacation"
        app:layout_constraintStart_toStartOf="@+id/titleAddVacation"
        app:layout_constraintTop_toBottomOf="@+id/titleAddVacation" />

    <Button
        android:id="@+id/confirm_button4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange"
        android:text="@string/add_vacation"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smaller_margin"
        android:fontFamily="@font/alata"
        android:text="Place"
        app:layout_constraintEnd_toEndOf="@+id/editTextVacationName"
        app:layout_constraintStart_toStartOf="@+id/editTextVacationName"
        app:layout_constraintTop_toBottomOf="@+id/editTextVacationName" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smaller_margin"
        android:ems="10"
        android:fontFamily="@font/alata"
        android:inputType="date"
        android:text="Date"
        app:layout_constraintEnd_toEndOf="@+id/autoCompleteTextView"
        app:layout_constraintStart_toStartOf="@+id/autoCompleteTextView"
        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>